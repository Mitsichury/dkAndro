<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expandableLv"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:divider="#01000000"
        /><!--android:groupIndicator="@drawable/indicator"-->

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:paddingBottom="10dp"
        android:id="@+id/imageView2"
        android:src="@mipmap/bandeau"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ZENITH LIMOGES"
        android:id="@+id/textView"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:shadowColor="#ff000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:layout_below="@+id/imgViewChargement"
        android:layout_toEndOf="@+id/imgViewChargement" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imgViewChargement"
        android:background="#f000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/load"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:id="@+id/pgBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        />

</RelativeLayout>
