<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="30dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mitsichury.firstwebservicegetinformation.About"
    android:background="@mipmap/bg_about">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/about_title"
        android:id="@+id/tv_titre"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#33ffffff"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/about_desc"
        android:id="@+id/tv_descAbout"
        android:layout_below="@+id/tv_intro"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textColor="#ff000000"
        android:background="#55ffffff"
        android:padding="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/about_intro"
        android:id="@+id/tv_intro"
        android:layout_below="@+id/tv_titre"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textColor="#ff000000"
        android:background="#55ffffff"
        android:padding="5dp"
        />
</RelativeLayout>
